<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/letra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/letra"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toTopOf="@+id/adivinhar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem" />

    <Button
        android:id="@+id/adivinhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adivinhar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/letra" />

    <ImageView
        android:id="@+id/imagem"
        android:layout_width="260dp"
        android:layout_height="420dp"
        android:contentDescription="@string/forca1"
        app:layout_constraintBottom_toTopOf="@+id/letra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515"
        app:srcCompat="@drawable/forca1" />

    <TextView
        android:id="@+id/status"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="188dp"
        android:text="@string/status"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/letra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagem"
        app:layout_constraintVertical_bias="0.901"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>